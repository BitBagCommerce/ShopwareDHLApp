{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
{% endblock %}

{% block body %}
    <div class="bitbag-sw-container">
        <form method="post">
            <div class="save-container">
                <a class="sw-button float-right" id="check-credentials">{{ 'bitbag.shopware_dhl_app.ui.check_credentials'|trans }}</a>
                <button type="submit" class="sw-button sw-button--primary float-right">
                    {{ 'bitbag.shopware_dhl_app.ui.save'|trans }}
                </button>
            </div>
            <div class="sw-card">
            {% if app.session is not null and app.session.started %}
                {% for label, messages in app.session.flashbag.all %}
                    {% for message in messages %}
                            <div class="sw-card__content">
                                <div class="sw-container">{{ message }}</div>
                            </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
            </div>
            <div class="sw-card">
                <div class="sw-card__content">
                    <div class="sw-container"
                         style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 0px 30px; place-items: stretch;">
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.username) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.username) }}
                            </div>
                        </div>
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.accountNumber) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.accountNumber) }}
                            </div>
                        </div>
                    </div>

                    <div class="sw-container"
                         style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 0px 30px; place-items: stretch;">
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.password) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.password) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sw-card">
                <div class="sw-card__content">
                    <div class="sw-container"
                         style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 0px 30px; place-items: stretch;">
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.name) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.email) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.email) }}
                            </div>
                        </div>
                    </div>

                    <div class="sw-container"
                         style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 0px 30px; place-items: stretch;">
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.postalCode) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.postalCode) }}
                            </div>
                        </div>
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.city) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.city) }}
                            </div>
                        </div>
                    </div>

                    <div class="sw-container"
                         style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 0px 30px; place-items: stretch;">
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.street) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.street) }}
                            </div>
                        </div>
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.houseNumber) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.houseNumber) }}
                            </div>
                        </div>
                    </div>

                    <div class="sw-container"
                         style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 0px 30px; place-items: stretch;">
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.phoneNumber) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.phoneNumber) }}
                            </div>
                        </div>

                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.payerType) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.payerType) }}
                            </div>
                        </div>
                    </div>

                    <div class="sw-container"
                         style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 0px 30px; place-items: stretch;">
                        <div class="sw-field sw-block-field sw-contextual-field sw-field--text sw-field--default">
                            <div class="sw-field__label">
                                <label for="sw-field--shippingMethod-name" class="is--required">
                                    {{ form_label(form.paymentMethod) }}
                                </label>
                            </div>
                            <div class="sw-block-field__block">
                                {{ form_widget(form.paymentMethod) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_widget(form._token) }}
        </form>
    </div>
    <script>
        const checkCredentialsEl = document.getElementById('check-credentials');
        const searchParams = new URLSearchParams(window.location.search)
        let container = document.querySelector('div.sw-card');

        checkCredentialsEl.addEventListener('click', (e) => {

            const fetchOptions = {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    username: document.getElementById('config_username').value,
                    password: document.getElementById('config_password').value,
                    accountNumber: document.getElementById('config_accountNumber').value,
                    source: {
                        shopId: searchParams.get('shop-id'),
                    }
                })
            };

            fetch('/app/module/api-check-credentials', fetchOptions)
                .then(results => results.json())
                .then(data => {
                    console.log(data);
                    container.innerHTML = '<div class="sw-card__content"><div class="sw-container">'+data.payload.message+'</div></div>';
                })
            ;
        });
    </script>
{% endblock %}
